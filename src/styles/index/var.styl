:root
  --font-black: black
  --font-gray: #363636
  --theme-color: #49b1f5
  --theme-bg: #f5f5f5
  --theme-card-bg: linear-gradient(to bottom right, #fff, rgba(255,255,255,0.7))
  --theme-card-pure-bg: white

.gray
  color: #6B7280
.red
  color: #CD201F
.yellow
  color: #F59E0B
.green
  color: #10B981
.blue
  color: #3B82F6
.indigo
  color: #6366F1
.purple
  color: #8B5CF6
.pink
  color: #EC4899
.black
  color: #333
.light-blue
  color: #1DA1F2


.bg-gray
  background-color: #6B7280
.bg-red
  background-color: #CD201F
.bg-yellow
  background-color: #F59E0B
.bg-green
  background-color: #10B981
.bg-blue
  background-color: #3B82F6
.bg-indigo
  background-color: #6366F1
.bg-purple
  background-color: #8B5CF6
.bg-pink
  background-color: #EC4899
.bg-black
  background-color: #333
.bg-light-blue
  background-color: #1DA1F2

@keyframes appear 
  0%
    transform: translateY(-5px)
    opacity: 0
  100%
    transform: translateY(0)
    opacity: 1
