#post-list-footer
  margin-top: 16px
  display: flex
  justify-content: center
  .button
    margin: 8px 10px
    width: 38px
    height: 38px
    display: flex
    justify-content: center
    align-items: center
    simpleButton()
    text-decoration: none
    font-size: 18px
    color: var(--font-black)
    &:not(.space):hover
      background: rgba(100 100 100 .2)
    &.hide
      display: none
    &.space
      cursor: default
    &.currentPage
      background: rgba(100 100 100 .2)
