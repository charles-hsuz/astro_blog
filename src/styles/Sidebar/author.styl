#sidebar
  .author
    padding-bottom: 3px
    background: white
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: .3s
    .sculpture img
      width:  130px
      margin-left:-10px
    .greet
      font-weight: 500;
      font-size: 1.57em;
    .info
      margin: 10px 0;
    .links
      padding: 0 10px
      display: flex
      width: calc(100% - 20px)
      justify-content: space-between
      margin: 6px 0 10px;
      .link
        text-decoration: none
        color: var(--font-gray)
      i
        font-size: 1.5rem
        margin: 0 5px
        color: var(--font-gray)
        transition: .5s
      .icon:hover>i
        transform: rotateZ(360deg)
      .button
        white-space: nowrap
        background: rgba(100 100 100 .2)
        padding: 0 5px
        border-radius: 5px
        font-size: 18px
        transition: .3s
        &:hover
          background-color: var(--font-gray)
          color: white
