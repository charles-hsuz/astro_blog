#header
  height: 60px
#nav
  backdrop-filter: blur(5px);
  background: linear-gradient(to bottom right, rgba(255,255,255,0.5), rgba(255,255,255,0.2));
  border-width: 0 1px 1px 0;
  border-color: rgba(255,255,255,0.6);
  border-style: solid;
  position: fixed;
  top: 0;
  z-index: 90;
  display: flex;
  align-items: center;
  justify-content: space-between
  box-sizing: border-box
  padding: 0 36px;
  width: 100%
  height: 60px;
  font-size: 1.3em;
  color: var(--font-black);
  transition: all 0.5s;

  a
    text-decoration: none
    display: flex
    align-items: center
    color: var(--font-black)
    font-size: 16px
    i
      padding: 0 5px
      transition: all .5s
  #blog-info
    .site-icon
      width: 36px
    .site-name
      line-height: 10px
      font-weight: bold
      color: var(--font-black)
      font-size: 26px
      margin-left: 15px
  #menu_container
    display: flex
    height: 60px
    align-items: center
    .menu_item
      position relative
      padding: 0px 10px
      .child_menu
        backdrop-filter: blur(5px)
        transition: all .5s
        display: none
        flex-direction: row
        position: absolute
        right: 0
        top: 30px
        margin: 15px
        list-style: none
        background: var(--theme-card-bg)
        padding: 10px 10px
        border-radius: 8px
        li
          background: transparent
          padding: 5px 5px
          border-radius: 5px
          transition: .3s
        li:hover
          background: var(--theme-color)
          padding: 5px 8px
          a
            color: white
        span 
          white-space: nowrap
          transition: .5s
      &:hover .fa-chevron-down
        transform: rotate(180deg)
      &:hover .child_menu
        display: flex
        animation appear .3s linear
      .child_menu:before
        position: absolute;
        top: -25px;
        left: 0;
        width: 100%;
        height: 30px;
        content: '';