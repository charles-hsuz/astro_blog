#header
  height: 60px
#nav
  background: transparent
  border-width: 0 1px 1px 0
  border-color: transparent
  border-style: solid
  position: fixed
  top: 0
  z-index: 90
  display: flex
  align-items: center
  justify-content: space-between
  box-sizing: border-box
  padding: 0 36px
  width: 100%
  height: 60px
  font-size: 1.3em
  color: var(--font-black)
  transition: all 0.5s
  &.scroll
    border-color: rgba(255,255,255,0.6)
    backdrop-filter: blur(5px)
    background: linear-gradient(to bottom right, rgba(255,255,255,0.5), rgba(255,255,255,0.2))
    box-shadow:  2px 2px 12px -4px #000
  a
    text-decoration: none
    display: flex
    align-items: center
    color: var(--font-black)
    font-size: 16px
    i
      padding: 0 5px
      transition: all .5s
  #blog-info
    .site-icon
      width: 36px
    .site-name
      line-height: 10px
      font-weight: bold
      color: var(--font-black)
      font-size: 26px
      margin-left: 15px
  #menu_container
    display: flex
    height: 60px
    align-items: center
    .menu_item
      position relative
      padding: 0px 10px
      .child_menu
        backdrop-filter: blur(5px)
        display: flex
        flex-direction: row
        display: none
        position: absolute
        right: 0
        top: 30px
        margin: 15px
        list-style: none
        background: var(--theme-card-bg)
        padding: 10px 10px
        border-radius: 8px
        transition: .5s
        li
          background: transparent
          padding: 5px 5px
          border-radius: 5px
          transition: .3s
        li:hover
          background: var(--theme-color)
          padding: 5px 8px
          a
            color: white
        span 
          white-space: nowrap
          transition: .5s
      &:hover .fa-chevron-down
        transform: rotate(180deg)
      &:hover .child_menu
        display: flex
        animation come_up .3s ease .1s both
        top: 15px
      .child_menu:before
        position: absolute
        top: -15px
        left: 0
        width: 100%
        height: 30px
        content: ''